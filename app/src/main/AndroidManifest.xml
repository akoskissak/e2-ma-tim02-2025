<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE_REMOTE_MESSAGING" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.HabitMaster"
        tools:ignore="ForegroundServicePermission">
        <activity
            android:name=".ui.activities.AllianceMissionProgressActivity"
            android:exported="false" />
        <activity
            android:name=".ui.activities.BossFightActivity"
            android:exported="false" />
        <activity
            android:name=".ui.activities.CategoriesActivity"
            android:exported="false" />
        <activity
            android:name=".ui.activities.TaskDetailActivity"
            android:exported="false" />
        <activity
            android:name=".ui.activities.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.activities.RegisterActivity"
            android:exported="false" />
        <activity
            android:name=".ui.activities.LoginActivity"
            android:exported="false" />
        <activity
            android:name=".ui.activities.ProfileActivity"
            android:exported="false" />
        <activity
            android:name=".ui.activities.LevelProgressActivity"
            android:exported="false" />
        <activity
            android:name=".ui.activities.UserStatisticsActivity"
            android:exported="false" />
        <activity
            android:name=".ui.activities.MyTasksActivity"
            android:exported="false" />
        <activity
            android:name=".ui.activities.CreateTaskActivity"
            android:exported="false" />
        <activity
            android:name=".ui.activities.ShopActivity"
            android:exported="false" />
        <activity
            android:name=".ui.activities.InventoryActivity"
            android:exported="false" />
        <activity
            android:name=".ui.activities.FriendActivity"
            android:exported="false" />
        <activity
            android:name=".ui.activities.AllianceActivity"
            android:exported="false" />
        <activity
            android:name=".ui.activities.FollowRequestsActivity"
            android:exported="false" />

        <service
            android:name=".services.AllianceInviteListenerService"
            android:foregroundServiceType="remoteMessaging"
            android:exported="false" />

        <service
            android:name=".services.AllianceMemberListenerService"
            android:foregroundServiceType="remoteMessaging"
            android:exported="false" />

        <service android:name=".services.AllianceChatListenerService"
            android:foregroundServiceType="remoteMessaging"
            android:exported="false" />


        <receiver
            android:name=".receivers.InviteActionReceiver"
            android:exported="true" />
    </application>

</manifest>