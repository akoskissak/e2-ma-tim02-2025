<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvDialogUsername"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Username"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="12dp" />

        <TextView
            android:id="@+id/tvShopPurchases"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Shop purchases:" />

        <TextView
            android:id="@+id/tvBossHits"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Boss fight hits:" />

        <TextView
            android:id="@+id/tvSolvedTasks"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Solved tasks:" />

        <TextView
            android:id="@+id/tvSolvedOtherTasks"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Solved other tasks:" />

        <TextView
            android:id="@+id/tvNoUnresolvedTasks"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="No unresolved tasks:" />

        <TextView
            android:id="@+id/tvMessagesSentDays"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Messages sent days:" />

        <TextView
            android:id="@+id/tvTotalDamage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Total damage:" />

    </LinearLayout>
</ScrollView>
