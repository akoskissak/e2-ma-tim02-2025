<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/mainContent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="20dp">
        <ImageView
            android:id="@+id/bossImage"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="@drawable/boss"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <FrameLayout
            android:id="@+id/bossHpFrameLayout"
            android:layout_width="0dp"
            android:layout_height="24dp"
            app:layout_constraintTop_toBottomOf="@id/bossImage"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp">

            <ProgressBar
                android:id="@+id/bossHpBar"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:max="100"
                android:progress="100"
                android:progressDrawable="@drawable/progress_red"/>

            <TextView
                android:id="@+id/bossHpText"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="100/100 HP"
                android:textSize="14sp"
                android:textColor="@android:color/white"
                android:shadowColor="@android:color/black"
                android:shadowDx="1"
                android:shadowDy="1"
                android:shadowRadius="2"/>
        </FrameLayout>


        <FrameLayout
            android:id="@+id/userPpFrameLayout"
            android:layout_width="0dp"
            android:layout_height="24dp"
            app:layout_constraintTop_toBottomOf="@id/bossHpFrameLayout"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp">

            <ProgressBar
                android:id="@+id/userPpBar"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:max="100"
                android:progress="0"
                android:progressDrawable="@drawable/progress_blue"/>

            <TextView
                android:id="@+id/userPpText"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="0 PP"
                android:textSize="14sp"
                android:textColor="@android:color/white"
                android:shadowColor="@android:color/black"
                android:shadowDx="1"
                android:shadowDy="1"
                android:shadowRadius="2"/>
        </FrameLayout>

        <!-- Aktivna oprema -->
        <TextView
            android:id="@+id/tvEquipmentTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Active equipments"
            android:textSize="16sp"
            android:textColor="@android:color/black"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@id/userPpFrameLayout"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/activeEquipmentRecyclerView"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/tvEquipmentTitle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:clipToPadding="false"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:orientation="horizontal"/>

        <!-- Dugme za napad -->
        <Button
            android:id="@+id/attackButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/attack"
            app:layout_constraintTop_toBottomOf="@id/activeEquipmentRecyclerView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="24dp"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp" />

        <!-- Brojač preostalih napada -->
        <TextView
            android:id="@+id/remainingAttacks"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5/5"
            android:textSize="18sp"
            app:layout_constraintTop_toBottomOf="@id/attackButton"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="16dp"
            android:layout_marginStart="16dp"/>

        <!-- Šansa za uspeh -->
        <TextView
            android:id="@+id/attackChance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chance: 0%"
            android:textSize="18sp"
            app:layout_constraintTop_toBottomOf="@id/attackButton"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <View
            android:id="@+id/darkBackground"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="#80000000"
            android:visibility="gone"/>

        <ImageView
            android:id="@+id/chestAnimationView"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:adjustViewBounds="true"
            android:background="@drawable/chest_animation"
            android:scaleType="fitCenter"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHeight_percent="0.45"
            app:layout_constraintWidth_percent="0.85" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/rewardLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:layout_constraintTop_toTopOf="@id/chestAnimationView"
            app:layout_constraintStart_toStartOf="@id/chestAnimationView"
            app:layout_constraintEnd_toEndOf="@id/chestAnimationView">

            <!-- Coin icon i text -->
            <LinearLayout
                android:id="@+id/coinLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/coinIcon"
                    android:layout_width="128dp"
                    android:layout_height="128dp"
                    android:src="@drawable/ic_coins" />

                <TextView
                    android:id="@+id/rewardCoinsText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="100"
                    android:textColor="@android:color/holo_orange_light"
                    android:textSize="32sp"
                    android:gravity="center"/>
            </LinearLayout>

            <!-- Equipment icon -->
            <ImageView
                android:id="@+id/rewardEquipmentIcon"
                android:layout_width="128dp"
                android:layout_height="128dp"
                android:src="@drawable/sword"
                app:layout_constraintStart_toEndOf="@id/coinLayout"
                app:layout_constraintTop_toTopOf="@id/coinLayout"
                android:layout_marginStart="16dp"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/userNotReadyText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="You are not ready for next boss"
        android:visibility="gone"
        android:gravity="center"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>



</androidx.constraintlayout.widget.ConstraintLayout>
